# Polymarket API Configuration
NEXT_PUBLIC_POLYMARKET_GAMMA_API_URL=https://gamma-api.polymarket.com
NEXT_PUBLIC_POLYMARKET_CLOB_API_URL=https://clob.polymarket.com

# Polymarket Authentication (if needed)
# POLYMARKET_API_KEY=your_api_key_here

# Optional: Database Configuration
# DATABASE_URL=your_database_url_here

# Optional: S3/Object Storage Configuration
# S3_BUCKET_NAME=your_bucket_name_here
# S3_ACCESS_KEY_ID=your_access_key_id_here
# S3_SECRET_ACCESS_KEY=your_secret_access_key_here
# S3_REGION=your_region_here

# Optional: Redis Configuration
# REDIS_URL=your_redis_url_here

# Optional: Feature Flags
NEXT_PUBLIC_ENABLE_LIVE_TRADING=false
NEXT_PUBLIC_ENABLE_BACKTESTING=true

# Next.js Configuration
NEXT_PUBLIC_SITE_URL=https://your-domain.com
